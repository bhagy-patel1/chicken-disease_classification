# =============================================================================
# CHICKEN DISEASE CLASSIFICATION PROJECT - .gitattributes
# =============================================================================

# =============================================================================
# AUTO DETECT TEXT FILES AND PERFORM LF NORMALIZATION
# =============================================================================
* text=auto

# =============================================================================
# TEXT FILES - FORCE LF LINE ENDINGS
# =============================================================================
*.py text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.js text eol=lf
*.html text eol=lf
*.css text eol=lf
*.xml text eol=lf
*.csv text eol=lf
*.tsv text eol=lf
*.sql text eol=lf
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# =============================================================================
# CONFIGURATION FILES
# =============================================================================
*.cfg text eol=lf
*.conf text eol=lf
*.config text eol=lf
*.ini text eol=lf
*.toml text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.dvcignore text eol=lf
Dockerfile text eol=lf
requirements.txt text eol=lf
setup.py text eol=lf
setup.cfg text eol=lf
pyproject.toml text eol=lf
Pipfile text eol=lf

# =============================================================================
# JUPYTER NOTEBOOKS - TREAT AS TEXT BUT WITH SPECIAL HANDLING
# =============================================================================
*.ipynb text eol=lf

# =============================================================================
# BINARY FILES - DO NOT MODIFY
# =============================================================================
# Images
*.jpg binary
*.jpeg binary
